@page "/study"
@using BlazorApp1.Models
@using BlazorApp1.Services
@inject IFlashcardService FlashcardService
@inject UserService UserService

<PageTitle>Tryb Nauki</PageTitle>

@if (!UserService.IsLoggedIn)
{
    <div class="alert alert-warning">
        Nie jesteś zalogowany. <a href="login">Zaloguj się</a>, aby przejść do trybu nauki.
    </div>
}
else if (isLoading)
{
    <div class="spinner-overlay">
        <div class="text-center">
            <div class="spinner mb-3 mx-auto"></div>
            <h5>Ładowanie kategorii...</h5>
        </div>
    </div>
}
else
{
    <div class="container mt-5 text-center" style="max-width: 600px;">
        @if (!studySessionStarted)
        {
            <h3>Wybierz kategorię do nauki</h3>
            <div class="d-grid gap-2 mt-4">
                <button class="btn btn-lg btn-primary" @onclick="() => StartSession(null)">Wszystkie</button>
                @foreach (var cat in categories)
                {
                    <button class="btn btn-outline-primary" @onclick="() => StartSession(cat)">@cat</button>
                }
            </div>
        }
        else if (currentCard != null)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    Kategoria: <strong>@currentCard.Category</strong>
                    <span class="float-end text-muted">@currentIndex / @sessionCards.Count</span>
                </div>
                <div class="card-body py-5">
                    <h2 class="card-title mb-4">@currentCard.Question</h2>
                    
                    @if (showAnswer)
                    {
                        <div class="alert alert-success mt-4 animate__animated animate__fadeIn">
                            <h4>@currentCard.Answer</h4>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    @if (!showAnswer)
                    {
                        <button class="btn btn-warning w-100 btn-lg" @onclick="() => showAnswer = true">Pokaż Odpowiedź</button>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-danger w-100" @onclick="NextCard">Jeszcze nie umiem</button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-success w-100" @onclick="NextCard">Umiem!</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-success">
                <h4>Koniec sesji!</h4>
                <p>Przejrzałeś wszystkie fiszki z tej serii.</p>
                <button class="btn btn-primary" @onclick="Reset">Wróć do menu</button>
            </div>
        }
    </div>
}

@code {
    private List<string> categories = new();
    private List<Flashcard> sessionCards = new();
    private Flashcard? currentCard;
    private int currentIndex = 0;
    private bool studySessionStarted = false;
    private bool showAnswer = false;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (UserService.IsLoggedIn)
        {
            isLoading = true;
            categories = await FlashcardService.GetCategoriesAsync();
            isLoading = false;
        }
    }

    private async Task StartSession(string? category)
    {
        isLoading = true;
        
        var allCards = await FlashcardService.GetAllAsync();
        
        if (category == null)
            sessionCards = allCards.OrderBy(x => Random.Shared.Next()).ToList();
        else
            sessionCards = allCards.Where(c => c.Category == category).OrderBy(x => Random.Shared.Next()).ToList();

        currentIndex = 0;
        studySessionStarted = true;
        LoadNextCard();
        
        isLoading = false;
    }

    private void LoadNextCard()
    {
        showAnswer = false;
        if (currentIndex < sessionCards.Count)
        {
            currentCard = sessionCards[currentIndex];
            currentIndex++;
        }
        else
        {
            currentCard = null;
        }
    }

    private void NextCard()
    {
        LoadNextCard();
    }

    private void Reset()
    {
        studySessionStarted = false;
        currentCard = null;
    }
}