@page "/manage"
@using BlazorApp1.Models.OOP
@using BlazorApp1.Services
@inject IFlashcardService FlashcardService
@inject UserService UserService

<PageTitle>Zarządzaj Fiszkami</PageTitle>

@if (!UserService.IsLoggedIn)
{
    <div class="alert alert-warning">Zaloguj się!</div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-5">
                <div class="card p-3 mb-4">
                    <h4>Dodaj nową fiszkę</h4>
                    <EditForm Model="@tempModel" OnValidSubmit="HandleSubmit">
                        
                        <div class="mb-3">
                            <label class="form-label">Kategoria</label>
                            <select class="form-select" @bind="selectedCategory">
                                @foreach (var cat in categories) { <option value="@cat">@cat</option> }
                                <option value="__NEW__">+ Nowa...</option>
                            </select>
                            @if (selectedCategory == "__NEW__")
                            {
                                <input class="form-control mt-2" @bind="newCategoryName" placeholder="Nazwa kategorii" />
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Typ Fiszki</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="type" id="t1" autocomplete="off" 
                                       checked="@(isTextType)" @onclick="() => isTextType = true">
                                <label class="btn btn-outline-primary" for="t1">Tekstowa</label>

                                <input type="radio" class="btn-check" name="type" id="t2" autocomplete="off"
                                       checked="@(!isTextType)" @onclick="() => isTextType = false">
                                <label class="btn btn-outline-primary" for="t2">Quiz (ABCD)</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pytanie</label>
                            <InputTextArea class="form-control" @bind-Value="tempModel.Question" required />
                        </div>

                        @if (isTextType)
                        {
                            <div class="mb-3">
                                <label class="form-label">Poprawna odpowiedź</label>
                                <InputTextArea class="form-control" @bind-Value="tempModel.Answer" required />
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label">Poprawna odpowiedź</label>
                                <InputText class="form-control is-valid" @bind-Value="tempModel.Answer" placeholder="Np. Kot" required />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Błędne odpowiedzi (oddziel przecinkami)</label>
                                <InputText class="form-control" @bind-Value="wrongOptionsRaw" placeholder="Np. Pies, Ryba, Chomik" required />
                                <small class="text-muted">System wymiesza odpowiedzi automatycznie.</small>
                            </div>
                        }

                        <button type="submit" class="btn btn-success w-100">Dodaj Fiszkę</button>
                    </EditForm>
                </div>
            </div>

            <div class="col-md-7">
                <h4>Twoje Fiszki</h4>
                @if (flashcards.Any())
                {
                    <div class="list-group">
                        @foreach (var card in flashcards)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@card.Question</h5>
                                    <small>@card.GetType().Name.Replace("Flashcard", "")</small>
                                </div>
                                <p class="mb-1">Odp: @card.GetCorrectAnswer()</p>
                                <small class="text-muted">@card.Category</small>
                                <button class="btn btn-sm btn-outline-danger float-end" @onclick="() => Delete(card.Id)">Usuń</button>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>Brak fiszek.</p>
                }
            </div>
        </div>
    </div>
}

@code {
    class FormModel { public string Question { get; set; } = ""; public string Answer { get; set; } = ""; }
    
    private FormModel tempModel = new();
    private List<FlashcardBase> flashcards = new();
    private List<string> categories = new();
    
    private string selectedCategory = "Ogólne";
    private string newCategoryName = "";
    private bool isTextType = true;
    private string wrongOptionsRaw = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        if (UserService.IsLoggedIn)
        {
            flashcards = await FlashcardService.GetAllOOPAsync();
            categories = await FlashcardService.GetCategoriesAsync();
            if (!categories.Contains("Ogólne")) categories.Insert(0, "Ogólne");
        }
    }

    private async Task HandleSubmit()
    {
        string finalCategory = selectedCategory == "__NEW__" ? newCategoryName : selectedCategory;
        if (string.IsNullOrWhiteSpace(finalCategory)) finalCategory = "Ogólne";

        if (isTextType)
        {
            await FlashcardService.AddTextAsync(finalCategory, tempModel.Question, tempModel.Answer);
        }
        else
        {
            var options = new List<string> { tempModel.Answer }; 
            if (!string.IsNullOrWhiteSpace(wrongOptionsRaw))
            {
                var wrong = wrongOptionsRaw.Split(',').Select(x => x.Trim()).Where(x => !string.IsNullOrEmpty(x));
                options.AddRange(wrong);
            }

            options = options.OrderBy(x => Random.Shared.Next()).ToList();
            
            await FlashcardService.AddChoiceAsync(finalCategory, tempModel.Question, tempModel.Answer, options);
        }

        tempModel = new FormModel();
        wrongOptionsRaw = "";
        await LoadData();
    }

    private async Task Delete(Guid id)
    {
        await FlashcardService.DeleteAsync(id);
        await LoadData();
    }
}