@page "/login"
@using BlazorApp1.Services
@inject UserService UserService
@inject IFlashcardService FlashcardService
@inject NavigationManager Nav

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Witaj w FiszkiApp</h3>
            
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner mb-3 mx-auto"></div>
                    <p class="text-muted">Weryfikacja użytkownika...</p>
                </div>
            }
            else
            {
                <p class="text-muted text-center">Podaj identyfikator, aby uzyskać dostęp.</p>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger alert-fade text-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
                    </div>
                }

                <EditForm Model="@userId" OnSubmit="HandleLogin">
                    <div class="mb-3">
                        <label class="form-label">Twój ID</label>
                        <InputText @bind-Value="userId" class="form-control form-control-lg" placeholder="np. test" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 btn-lg" disabled="@string.IsNullOrWhiteSpace(userId)">
                        Wejdź
                    </button>
                </EditForm>
                
                <div class="mt-3 text-center text-muted small">
                    <hr />
                    Wskazówka: Użyj konta <strong>test</strong> dla wersji demo.
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string userId = "";
    private string errorMessage = "";
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(userId)) return;

        isLoading = true;
        errorMessage = "";
        StateHasChanged(); 

        try
        {
            bool exists = await FlashcardService.UserExistsAsync(userId);

            if (exists)
            {
                await UserService.LoginAsync(userId);
                Nav.NavigateTo("/");
            }
            else
            {
                errorMessage = "Użytkownik nie istnieje.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Błąd połączenia z bazą danych.";
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}