@inherits LayoutComponentBase
@inject BlazorApp1.Services.UserService UserService
@inject NavigationManager Nav
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (UserService.IsLoggedIn)
            {
                <span class="me-3 fw-bold text-dark">Witaj, @UserService.CurrentUserId!</span>
                <button class="btn btn-outline-danger btn-sm" @onclick="Logout">Wyloguj</button>
            }
            else
            {
                <a href="login" class="btn btn-link">Zaloguj się</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        UserService.OnChange += StateHasChanged;
        
        RedirectToLoginIfNeeded();
    }
    
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            RedirectToLoginIfNeeded();
        }
    }

    private void RedirectToLoginIfNeeded()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        bool isLoginPage = uri.AbsolutePath.Contains("login", StringComparison.OrdinalIgnoreCase);

        if (!UserService.IsLoggedIn && !isLoginPage)
        {
            Nav.NavigateTo("login");
        }
    }

    private async Task Logout()
    {
        await UserService.LogoutAsync();
        Nav.NavigateTo("login");
    }

    public void Dispose()
    {
        UserService.OnChange -= StateHasChanged;
    }
}